<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {{!-- NAVBAR --}}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

  {{!-- SLIDER --}}
  <link rel="stylesheet" href="./css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <title>ATN Shop</title>
</head>
<style>
  body {
    background-image: url('https://images6.alphacoders.com/606/thumb-1920-606263.jpg');
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: 100% 100%;
  }
</style>

<body>
  {{!-- HEADER --}}
  <div class="header">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark" style="margin-bottom:30px; opacity: 0.85;">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mynavbar">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/" style="color: white; font-weight:bold">HOME</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addproduct" style="color: white; font-weight:bold">ADD PRODUCT</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>

  {{!-- IMAGE SLIDER --}}
  <div class="container">
    <div id="mycarousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
        <li data-target="#mycarousel" data-slide-to="1"></li>
        <li data-target="#mycarousel" data-slide-to="2"></li>
        <li data-target="#mycarousel" data-slide-to="3"></li>
        <li data-target="#mycarousel" data-slide-to="4"></li>
      </ol>
      <div class="carousel-inner" style="width: 1110px; height:448.05px">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://images8.alphacoders.com/119/thumb-1920-1193349.jpg">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images2.alphacoders.com/759/thumb-1920-75960.jpg">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images4.alphacoders.com/551/thumb-1920-551541.jpg">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images8.alphacoders.com/412/thumb-1920-412566.jpg">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images8.alphacoders.com/388/thumb-1920-388957.jpg">
        </div>
      </div>
      <a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <script>$('.carousel').carousel({
          interval: 20
        })</script>
    </div>

    {{!-- SEARCH --}}
    <div class="home_page" style="margin-top: 30px;">
      <div class="input-group">
        <form method="POST" action="/category" class="col-md-4 px-0 mt-2" style="margin-right: 10px; ;">
          <input type="text" class="form-control" style=" width:400px;" list="title_product" name="txtName"
            placeholder="Search by Category">
        </form>
        <form method="POST" action="/search" class="mt-2 col-md-8 px-0">
          <input type="text" class="form-control" style=" width:400px;" list="title_product" name="txtName"
            placeholder="Search by Name">
        </form>
      </div>
    </div>

    {{!-- PRODUCT --}}
    <div class="product-card">
      <div class="row">
        {{#each products}}
        <div class="card"
          style="width: 330px; height:340px; margin:1.55rem; border-radius:10px; background-color:blanchedalmond">
          <img class="card-img-top" src="{{image}}" alt="Card image"
            style="width: 300px; height:195px; margin:center;margin-top:10px; border-radius:10px">
          <div class="card-body">
            <h5 class="card-title">{{name}}</h4>
              <h6 class="card-text">Price: {{price}}$</p>
                <div class="row justify-content-between mx-0">
                  <a class="btn btn-primary" style="margin-right:5px;flex:1" href="/edit/{{_id}}">Update</a>
                  <a class="btn btn-danger" style="margin-right:5px;flex:1" onclick="return confirm('Are your sure?')"
                    href="/delete/{{_id}}">Delete</a>
                </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- FOOTER --}}
    <div class="footer"
      style="text-align: center; padding: 3px; background-color: #3E403F; color: white; font-weight:bold; border-top-left-radius: 10px; border-top-right-radius: 10px; opacity: 0.85;">
      <footer class="container-fluid text-center" style="margin-top:35px;margin-bottom:10px;">
        <span class="footer-copyright">ATN SHOP Â© Copyright 2021. All Rights Reserved.</span>
      </footer>
    </div>

</body>

</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>